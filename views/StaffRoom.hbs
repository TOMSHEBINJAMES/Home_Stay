<section>
  <div class="container mt-4">
    {{#if roomdetails}}
    <div class="d-flex justify-content-center">
      <table class="table border border-success table-responsive table-sm" style='table-layout:fixed;width:fit-content'>
        <thead>
          <tr>
            <th scope="col">SL.No</th>
            <th scope="col">Room No</th>
            <th scope="col">Room Type</th>
            <th scope="col">Occupancy</th>
            <th scope="col">Availability</th>
            <th scope="col">Charge</th>
          </tr>
        </thead>
        {{#each roomdetails}}
        <tbody>
          <tr>
            <td>{{inc @index}}</td>
            <td>{{this.RoomNumber}}</td>
            <td>{{this.RoomType}}</td>
            <td>{{this.GuestNumber}}</td>
            <td>{{this.Availability}}</td>
            <td>{{this.Charge}}</td>
          </tr>
        </tbody>
        {{/each}}
      </table>
    </div>
    {{else}}
    <h5 class="text-center mt-4">No data available</h5>
    <p class="text-center">It seems like you have not added any rooms yet , contact your admin.<br> please
      feel free to contact us on any issues.</p>
    <div class="text-center"><i class="fa fa-user-secret"></i></div>
    {{/if}}
  </div>
</section>