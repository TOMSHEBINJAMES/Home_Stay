<section>
  <div class="container mt-4">
    <div class="text-center"><a href="/addstaff"><button class="btn btn-sm btn-success  mb-1">Add Staff</button></a>
    </div>
    {{#if staffdetails}}
    <div class="d-flex justify-content-center">
      <table class="table border border-success table-responsive" style='table-layout:fixed;'>
        <thead>
          <tr>
            <th scope="col">SL.No</th>
            <th scope="col">Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Email</th>
            <th scope="col">Date Of Birth</th>
            <th scope="col">Contact Number</th>
            <th scope="col">Address</th>
            <th scope="col">Qualification</th>
            <th scope="col">Password</th>
            <th scope="col">Delete</th>

          </tr>
        </thead>
        {{#each staffdetails}}
        <tbody>
          <tr>
            <td>{{inc @index}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.Gender}}</td>
            <td>{{this.Email}}</td>
            <td>{{this.Date_Of_Birth}}</td>
            <td>{{this.Contact_Number}}</td>
            <td>{{this.Qualification}}</td>
            <td>{{this.Address}}</td>
            <td>{{this.Password}}</td>
            <td><a href="/delete/{{this._id}}" class="btn btn-danger">Delete</a></td>
          </tr>
        </tbody>
        {{/each}}
      </table>
    </div>
    {{else}}
    <h5 class="text-center mt-4">No data available</h5>
    <p class="text-center">It seems like you have not added any staffs , tap on the Addstaff button above.<br> please
      feel free to contact us on any issues.</p>
    <div class="text-center"><i class="fa fa-user-secret"></i></div>
    {{/if}}
  </div>
</section>